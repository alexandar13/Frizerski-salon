<!DOCTYPE html>
<html style="height: 100%; width: 100%;">

<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>Salon</title>
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css">
    <style>
        * {
            box-sizing: border-box;
            margin: 0;

        }

        ul {
            list-style-type: none;
        }

        body {

            font-family: "Lato", sans-serif;
        }


        .wrapper {
            background-color: #dfe6e9;
            display: flex;
            width: 100%;
            height: 100%;

        }

        .calendar {
            margin: auto;
            width: 50%;
            height: 73%;
            background-color: #fff;
            box-shadow: 0px 0px 15px 4px rgba(148, 7, 7, 0.2);


        }

        .month {
            display: flex;
            justify-content: space-around;
            width: 100%;
            padding: 40px 30px;
            background-color: rgba(148, 7, 7, 0.2);
            color: #fff;
        }

        .weekdays {
            background-color: rgba(148, 7, 7, 0.2);
            color: #fff;
            padding: 10px 0;
            display: flex;

        }

        .days {
            font-weight: 300;
            padding: 20px 0;

        }

        .weekdays div,
        .days a {
            text-align: center;
            width: 12.85%;

        }

        .days a {
            padding: 10px 0;
            margin-bottom: 10px;
            transition: all 0.4s;
        }



        .today {
            background-color: rgba(148, 7, 7, 0.2);
            color: #fff;
        }

        #month {
            font-size: 30px;
            font-weight: 500;
            align-items: center;
            text-align: center;
        }
    </style>

</head>

<body style="height: 100%; width: 100%;">
    <%- include('partials/navbar.ejs'); %>
    <div class="wrapper">
        <div>
            <br>
            <br>
            <br>
        </div>

        <div class="calendar">
            <div class="month">
                <div>
                    <h2 id="month">
                        <div>
                            <% var months = [ "Januar","Februar","Mart","April","Maj","Jun","Jul","Avgust","Septembar","Oktobar","Novembar","Decembar"]%>
                            <% var dt = new Date(); %>
                            <% dt.setDate(1); %>
                            <div> <%=months[dt.getMonth()] %></div>

                        </div>
                    </h2>
                    <p id="date_str"></p>
                </div>
            </div>
            <div class="weekdays">
                <div>Ned</div>
                <div>Pon</div>
                <div>Uto</div>
                <div>Sre</div>
                <div>Cet</div>
                <div>Pet</div>
                <div>Sub</div>
            </div>
            <div class="days">

                <% var dt = new Date(); %>
                <% dt.setDate(1); %>
                <% var day = dt.getDay(); %>
                <% var today = new Date(); %>
                <% var endDate = new Date(dt.getFullYear(),dt.getMonth() + 1,0).getDate(); %>

                <% var prevDate = new Date(dt.getFullYear(),dt.getMonth(),0).getDate(); %>


                <% var j=0; %>
                <% for (var x = day; x > 0; x--) { %> <a class="btn btn-sm btn-outline-danger"> <%=(prevDate-x+1) %> </a>
                <% } %>
                <% for(i = 1; today.getDate() >= i;i++){%>
                <% j++ %>
                <a class="btn btn-sm btn-outline-danger"> <%=i %> </a>
                <% } %>
                <% for (i = today.getDate() + 1; endDate>=i; i++) { %>
                <a class="btn btn-sm btn-outline-dark" href="/frizeri/<%=profil._id%>/termin/<%=profil.dani[j]%>"><%=i %></a> 
                    <% j++ %>
                    <% } %>
            </div>
        </div>
    </div>
    </div>
</body>
<%- include ('partials/footer.ejs'); %>